{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "noImplicitAny": false,
        "sourceMap": true,
        "declaration": true,
        "strict": true,
        "rootDirs": ["src", "spec"],
        "outDir": "dist",
        "noEmitOnError": true,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*"
            ]
        },
        "lib": [
            "esnext"
        ],
        "moduleResolution": "node",
        "esModuleInterop": true,
        "isolatedModules": true,
    },
    "exclude": [
        "node_modules",
        "dist"
    ]
}
